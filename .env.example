# ApplyIQ Bangladesh - Environment Variables

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_NAME=applyiq_bangladesh

# App Configuration
VITE_APP_NAME=ApplyIQ Bangladesh
VITE_APP_URL=http://localhost:5173
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=10

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx

# Payment Gateway Configuration (for future use)
VITE_BKASH_APP_KEY=your-bkash-app-key
VITE_NAGAD_MERCHANT_ID=your-nagad-merchant-id

# Feature Flags
VITE_ENABLE_PAYMENTS=false
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_JOB_MATCHING=true
